#RCUDA.so: device.o
NVCC=/usr/local/cuda/bin/nvcc
CUDA_DIR=/usr/local/cuda
CUDA_INC=$(CUDA_DIR)/include
PKG_CPPFLAGS=-I$(CUDA_INC) -DUSE_S4_ENUMS=1
PKG_LIBS=-L$(CUDA_DIR)/lib -lcuda -lcudart

%.o: %.cu
	$(NVCC) -c $< -I$(CUDA_INC) -I$(R_HOME)/include

